<h1>Welcome to my first rails app</h1>
<div class="container">
  <% @questions.each do |question| %>
    <div class="media">
      <div class="media-left">
        <img src="<% question.gravatar %>" class="mr-3" alt="...">
      </div>
      <div class="media-body">
        <h4 class="media-heading">Owner: <%= question.email %></h4>
          <div><%= time_ago_in_words question.created_at %> ago</div>
          <%= question.body %>
        <div>
          <a href="<%= question_path(question) %>" class="btn btn-success btn-xs">view answers</a>
        </div>
      </div>
    </div>
  <% end %>
</div>